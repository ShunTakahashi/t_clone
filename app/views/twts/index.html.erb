<h1>tweet投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twts.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to '詳細', twt_path(tweet.id) %></td>
        <td><%= link_to '編集', edit_twt_path(tweet.id) %></td>
        <td><%= link_to '削除', twt_path(tweet.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_twt_path %>
